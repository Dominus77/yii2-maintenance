{
    "name": "dominus77/yii2-maintenance",
    "description": "Switching the site on the Yii2 into maintenance mode with a timer and user subscription form displayed.",
    "type": "yii2-extension",
    "keywords": ["dominus77","yii2","maintenance","module","component","widget"],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexey Schevchenko",
            "email": "ivanovosity@gmail.com"
        }
    ],
    "require": {
        "yiisoft/yii2": "~2.0",
        "yiisoft/yii2-bootstrap": "~2.0.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",

        "codeception/codeception": "^4.0",
        "codeception/module-asserts": "^1.0",
        "codeception/module-yii2": "^1.0",
        "codeception/module-filesystem": "^1.0",
        "codeception/verify": "~0.5.0 || ~1.1.0"
    },
    "repositories":[
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "dominus77\\maintenance\\": "src"
        }
    }
}
